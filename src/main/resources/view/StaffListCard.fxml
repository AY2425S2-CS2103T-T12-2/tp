<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>

        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>

            <!-- Personal Information -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="idLabel" text="ID:" styleClass="cell_small_label"/>
                <Label fx:id="id" styleClass="cell_big_label"/>
                <Label fx:id="nameLabel" text="Name:" styleClass="cell_small_label"/>
                <Label fx:id="name" styleClass="cell_big_label"/>
            </HBox>

            <!-- Contact Information -->
            <VBox spacing="5">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="phoneLabel" text="HP:" styleClass="cell_small_label"/>
                    <Label fx:id="phone" styleClass="cell_small_label"/>
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="emailLabel" text="Email:" styleClass="cell_small_label"/>
                    <Label fx:id="email" styleClass="cell_small_label"/>
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="addressLabel" text="Address:" styleClass="cell_small_label"/>
                    <Label fx:id="address" styleClass="cell_small_label"/>
                </HBox>
            </VBox>

            <!-- Department Information -->
            <VBox spacing="5">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="departmentLabel" text="Department:" styleClass="cell_small_label"/>
                    <Label fx:id="department" styleClass="cell_small_label"/>
                </HBox>
            </VBox>
        </VBox>
    </GridPane>
</HBox>
