<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <FlowPane fx:id="role"/>
            <HBox>
                <Label fx:id="contactLabel" text="Contact: " styleClass="cell_small_label, label-bold"/>
                <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
                    <HBox.margin>
                        <Insets right="4.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
            </HBox>

            <HBox>
                <Label fx:id="addressLabel" text="Address: " styleClass="cell_small_label, label-bold"/>
                <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
            </HBox>


            <HBox spacing="1.0" alignment="CENTER_LEFT">
                <Label fx:id="departmentLabel" text="Department: " styleClass="cell_small_label, label-bold"/>
                <Label fx:id="doctor" styleClass="cell_small_label" text="\$doctor">
                    <HBox.margin>
                        <Insets right="4.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="department" styleClass="cell_small_label" text="\$department"/>
            </HBox>

            <HBox spacing="1.0" alignment="CENTER_LEFT">
                <Label fx:id="nokLabel" text="Nok: " styleClass="cell_small_label, label-bold" />
                <Label fx:id="nokName" styleClass="cell_small_label" text="\$nokName">
                    <HBox.margin>
                        <Insets right="4.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="nokPhone" styleClass="cell_small_label" text="\$nokPhone" />
            </HBox>
            <HBox>
                <Label fx:id="remarkLabel" text="Remark: " styleClass="cell_small_label, label-bold"/>
                <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" />
            </HBox>

        </VBox>
    </GridPane>
</HBox>
