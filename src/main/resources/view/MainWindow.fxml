<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="A Caring Book" minWidth="450" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/caringbook.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <HBox VBox.vgrow="ALWAYS">
          <!-- List Panel on the Left -->
          <VBox fx:id="personList" styleClass="pane-with-border" minWidth="380" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <padding>
              <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
          </VBox>

          <!-- Right Side Stack of Result Display and Command Box -->
          <VBox fx:id="rightPanel" spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <!-- Result Display Panel -->
            <VBox fx:id="resultDisplayPanel" styleClass="pane-with-border">
              <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
              </padding>
              <StackPane fx:id="resultDisplayPlaceholder" VBox.vgrow="ALWAYS"/>
            </VBox>
          </VBox>
        </HBox>
        <!-- Command Box Panel -->
        <VBox fx:id="commandBoxPanel" styleClass="pane-with-border">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
          <StackPane fx:id="commandBoxPlaceholder" VBox.vgrow="ALWAYS"/>
        </VBox>
        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
